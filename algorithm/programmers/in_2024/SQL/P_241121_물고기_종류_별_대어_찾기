-- 코드를 작성해주세요

SELECT A.ID AS ID, C.FISH_NAME AS FISH_NAME, B.LENGTH AS LENGTH
FROM FISH_INFO A JOIN
(
    SELECT MAX(LENGTH) LENGTH, FISH_TYPE
    FROM FISH_INFO
    GROUP BY FISH_TYPE
) B JOIN
FISH_NAME_INFO C
ON (A.FISH_TYPE = B.FISH_TYPE AND A.LENGTH = B.LENGTH AND A.FISH_TYPE = C.FISH_TYPE)
ORDER BY ID